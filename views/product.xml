                                    </div>
                                    <div class="tab-pane fade p-3" id="info" role="tabpanel" aria-labelledby="info-tab">
                                        <t t-call="sitio_imagen.tab_features_product"/>
                                    </div>
                                    <div class="tab-pane fade show active pt-4 pl-4" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                                        <div class="row">
                                            <div class="col-12 col-md-12 col-xl-12">
                                                <t t-call="portal.message_thread">
                                                    <t t-set="object" t-value="product"/>
                                                    <t t-set="display_rating" t-value="True"/>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <t t-if="len(product.alternative_product_ids) &gt; 0">
                        <t t-call="sitio_imagen.recommended_products_imagen"/>
                    </t>
                </div>

                <script type="text/javascript">
                    document.body.classList.add('page');
                </script>
            </t>
        </xpath>
    </template>
</odoo>